@model Customer
@{
    ViewData["Title"] = "Edit Customer";
}

<a class="btn btn-outline-secondary"
   asp-action="Customers"><</a>

<div style="padding-left:50px">

    <h3>Edit Customers: @Model.CustomerID</h3>

    <div class="row col-md-3">

        <!-- Withdraw form-->
        <form asp-action="Edit">

            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label"></label>
                <input type="text" asp-for="@Model.Name" name="Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.TFN" class="control-label"></label>
                <input type="text" asp-for="@Model.TFN" name="TFN" class="form-control" />
                <span asp-validation-for="@Model.TFN" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Address" class="control-label"></label>
                <input type="text" asp-for="@Model.Address" name="Address" class="form-control" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.City" class="control-label"></label>
                <input type="text" asp-for="@Model.City" name="City" class="form-control" />
                <span asp-validation-for="@Model.City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.State" class="control-label"></label>
                <input type="text" asp-for="@Model.State" name="State" class="form-control" />
                <span asp-validation-for="@Model.State" class="text-danger"></span>

                @Html.ValidationMessage("State", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label asp-for="@Model.Postcode" class="control-label"></label>
                <input type="text" asp-for="@Model.Postcode" name="Postcode" class="form-control" />
                <span asp-validation-for="@Model.Postcode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Mobile" class="control-label"></label>
                <input type="text" asp-for="@Model.Mobile" name="Mobile" class="form-control" />
                <span asp-validation-for="@Model.Mobile" class="text-danger"></span>
            </div>

            <br />

            <input type="hidden" name="customerID" value="@Model.CustomerID" />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-outline-secondary" />
            </div>
        </form>

    </div>

</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

