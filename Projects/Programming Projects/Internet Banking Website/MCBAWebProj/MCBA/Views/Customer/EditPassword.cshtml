@model Login
@{
    ViewData["Title"] = "Edit Password";
}

<a class="btn btn-outline-secondary"
   asp-action="MyProfile"><</a>

<div style="padding-left:50px">

    <h3>Edit Password</h3>

    <div class="row col-md-3">

        <!-- Edit password form -->
        <form asp-action="EditPassword">

            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input asp-for="PasswordHash" type="password" name="Password" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>

                @Html.ValidationMessage("Password", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label">Confirm Password</label>
                <input asp-for="PasswordHash" type="password" name="ConfirmPassword" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>

                @Html.ValidationMessage("ConfirmPassword", new { @class = "text-danger" })
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-outline-secondary" />
            </div>
        </form>

    </div>

</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
